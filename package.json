{
  "name": "nhom1-kiemthuphanmem-hutech",
  "version": "1.0.0",
  "description": "Kiem thu phan mem - Nhom 1 - HUTECH",
  "scripts": {
    "cypress:open": "cypress open",
    "qa": "cross-env ENV=qa npx cypress open",
    "qa-run": "cross-env ENV=qa npx cypress run",
    "cypress:run:qa": "cross-env ENV=qa npx cypress run  --browser chrome",
    "cypress:run:qa-smoke": "cross-env ENV=qa npx cypress run --env grepTags=@smoke,grepFilterSpecs=true --browser chrome",
    "allure:clean": "npx allure generate allure-results --clean -o allure-report",
    "allure:generate": "npx allure generate allure-results -o allure-report",
    "allure:open": "npx allure open allure-report",
    "test:allure:qa": "npm run cypress:run:qa && npm run allure:clean",
    "cy:smoke": "npx cypress run --env grepTags=@smoke,grepFilterSpecs=true",
    "cy:critical": "npx cypress run --env grepTags=@critical,grepFilterSpecs=true"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-cypress": "^3.4.2",
    "cross-env": "^10.1.0",
    "cypress": "^15.6.0",
    "cypress-file-upload": "^5.0.8",
    "mocha-allure-reporter": "^1.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@cypress/grep": "^5.0.0"
  }
}